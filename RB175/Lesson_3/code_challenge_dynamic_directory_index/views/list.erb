<!doctype html>
<html>
  <head>
      <meta charset="utf-8">
      <title>Directory</title>
      <style>
        li {
          list-style: none;
        }
      </style>
  </head>

  <body>
    <ul>
      <% @filelist.each do |file| %>
      <li><a href="<%= file %>"><%= file %></a></li>
      <% end %>
    </ul>

    <p>
      <% if params[:sort] == "desc" %>
        <a href="/">Sort Ascending</a>
      <% else %>  
        <a href="/?sort=desc">Sort Descending</a>
      <% end %>   
    </p>
  </body>
</html>
